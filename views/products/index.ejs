<%- include("../partials/header") %> 

<div class="container">
    <div class="jumbotron">
        <div class="container">
        <h1>Welcome to our Product Portfolio Website</h1>
        <p>View our hand picked products from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/products/new">Add New Product</a>
        </p>       
        </div>
        
    </div>
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% for(var i = 0; i< products.length; i++){  %> 
        <div class="col-lg-4 col-md-4 col-sm-6 ">
            <div class="card" style="margin-bottom: 50px;">
                <img src="<%= products[i].image %> " alt="Image not found " height="300px" width="157px" style="margin: auto;">
                <div class="card-body">
                    <h4><%= products[i].name %></h4>
                </div>
                <p>
                    <a href="/products/<%= products[i]._id %> " class="btn btn-primary">More Info</a>
                </p>
              </div> 
        </div>
        <% } %> 
    </div>   
</div>


<%- include("../partials/footer") %> 